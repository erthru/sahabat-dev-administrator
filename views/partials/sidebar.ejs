<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <div>
    <a href="/dashboard" class="brand-link logo-switch">
      <img
        src="/images/logo-white.png"
        alt="logo"
        width="160px"
        class="logo-xl"
        style="left: 37px"
      />
      <img
        src="/images/logo-small-white.png"
        alt="logo"
        width="32px"
        class="logo-xs"
        style="left: 24px"
      />
    </a>
  </div>
  <div class="sidebar">
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <a href="/dashboard/profile">
          <img
            src="/images/user-placeholder.png"
            class="img-circle elevation-2"
            alt="User Image"
          />
        </a>
      </div>
      <div class="info">
        <a href="/dashboard/profile" class="d-block"
          ><%= sessionUser.fullname %></a
        >
      </div>
    </div>
    <nav class="mt-2">
      <ul
        class="nav nav-pills nav-sidebar flex-column"
        data-widget="treeview"
        role="menu"
        data-accordion="false"
      >
        <li class="nav-item">
          <a
            href="/dashboard"
            class="nav-link <%= path === '/dashboard' ? 'active' : '' %>"
          >
            <i class="nav-icon fas fa-tachometer-alt"></i>
            <p>Dashboard</p>
          </a>
        </li>
        <li class="nav-header">DATA</li>
        <% if(sessionUser.role === "ADMIN") { %>
        <li class="nav-item">
          <a
            href="/dashboard/users"
            class="nav-link <%= path.includes('/dashboard/users') ? 'active' : '' %>"
          >
            <i class="nav-icon fas fa-users"></i>
            <p>Pengguna</p>
          </a>
        </li>
        <% } %>
        <li class="nav-item">
          <a
            href="/dashboard/posts"
            class="nav-link <%= path.includes('/dashboard/posts') ? 'active' : '' %>"
          >
            <i class="nav-icon fas fa-sticky-note"></i>
            <p>Postingan</p>
          </a>
        </li>
        <li class="nav-item">
          <a
            href="/dashboard/categories"
            class="nav-link <%= path.includes('/dashboard/categories') ? 'active' : '' %>"
          >
            <i class="nav-icon fas fa-stream"></i>
            <p>Kategori</p>
          </a>
        </li>
        <li class="nav-header">LAINNYA</li>
        <li class="nav-item">
          <a href="/logout" class="nav-link">
            <i class="nav-icon fas fa-sign-out-alt"></i>
            <p>Logout</p>
          </a>
        </li>
      </ul>
    </nav>
  </div>
</aside>
