<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/dashboard">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Profil</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <form action="/dashboard/profile?overrideMethod=put" method="post">
                <div class="row">
                  <div class="col-12 col-md-6">
                    <div class="form-group">
                      <label>Username</label>
                      <input value="<%= sessionUser.username %>" type="text" class="form-control" placeholder="Masukkan Username" required disabled />
                    </div>
                  </div>
                  <div class="col-12 col-md-6">
                    <div class="form-group">
                      <label>Nama Lengkap</label>
                      <input value="<%= sessionUser.fullname %>" type="text" name="fullname" class="form-control" placeholder="Masukkan Nama Lengkap" required />
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12 col-md-6">
                    <div class="form-group">
                      <label>Email</label>
                      <input value="<%= sessionUser.email %>" type="email" name="email" class="form-control" placeholder="Masukkan Email" required />
                    </div>
                  </div>
                  <div class="col-12 col-md-6">
                    <div class="form-group">
                      <label>Role</label>
                      <select class="form-control" required disabled>
                        <option value="" disabled selected>Pilih Role</option>
                        <option value="ADMIN" <% if (sessionUser.role === 'ADMIN') { %> selected <% } %>>Admin</option>
                        <option value="USER" <% if (sessionUser.role === 'USER') { %> selected <% } %>>User</option>
                      </select>
                    </div>
                  </div>
                </div>
                <p class="text-secondary" style="font-size: 14px">Jumlah postingan: <%= postsTotal %></p>
                <button type="submit" class="btn btn-primary">Simpan</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>