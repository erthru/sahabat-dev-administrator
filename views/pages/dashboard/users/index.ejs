<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/dashboard">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Pengguna</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <a
                href="/dashboard/users/add"
                class="btn btn-primary mb-3 d-table ml-auto ml-md-0 mr-auto mr-md-0 text-white"
              >
                <i class="fas fa-plus" style="font-size: 12px"></i>
                <span class="ml-1">Tambah</span>
              </a>
              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Nama Lengkap</th>
                    <th>Email</th>
                    <th>Aksi</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(function(user, i) { %>
                  <tr>
                    <td><%= i+1 %></td>
                    <td><%= user.username %></td>
                    <td><%= user.role %></td>
                    <td><%= user.fullname %></td>
                    <td><%= user.email %></td>
                    <td>
                      <% if (user.role === 'ADMIN') { %>
                      <button class="btn btn-warning" disabled>Lihat</button>
                      <% } else { %>
                      <a
                        href="/dashboard/users/<%= user.id %>"
                        class="btn btn-warning"
                      >
                        Lihat
                      </a>
                      <% } %>
                    </td>
                  </tr>
                  <%}) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
<script>
  $("document").ready(function () {
    $("table").DataTable({
      responsive: true,
    });
  });
</script>
