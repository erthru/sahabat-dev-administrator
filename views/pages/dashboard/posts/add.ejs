<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col">
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="/dashboard">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
              <a href="/dashboard/posts">Postingan</a>
            </li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div>
  </div>
  <section class="content">
    <div class="container-fluid">
      <% if (categories.length === 0) { %>
      <div class="alert alert-danger">
        Anda belum memiliki kategori, silahkan tambah kategori terlebih dahulu
        <a href="/dashboard/categories">di sini</a>
      </div>
      <% } %>
      <form action="/dashboard/posts/add" method="add">
        <div class="row">
          <div class="col-12 col-md-8">
            <div class="card">
              <div class="card-body">
                <div class="form-group">
                  <label>Judul</label>
                  <input
                    type="text"
                    name="title"
                    class="form-control"
                    placeholder="Masukkan Judul"
                    required
                  />
                </div>
                <div class="form-group">
                  <label>Isi</label>
                  <textarea
                    id="body"
                    name="body"
                    class="form-control"
                    required
                  ></textarea>
                </div>
                <button class="btn btn-primary">Simpan</button>
              </div>
            </div>
          </div>
          <div class="col-12 col-md-4">
            <div class="card">
              <div class="card-body">
                <div class="form-group">
                  <label>Thumbnail</label>
                  <input
                    type="file"
                    name="thumbnail"
                    class="form-control"
                    placeholder="Masukkan Judul"
                    required
                  />
                </div>
                <div class="form-group">
                  <label>Kategori</label>
                  <select name="categoryId" class="form-control" required>
                    <option value="" disabled selected>Pilih Kategori</option>
                    <option value="1">Potong Ayam</option>
                  </select>
                </div>
                <div class="form-group">
                  <label>Status</label>
                  <select name="status" class="form-control" required>
                    <option value="UNPUBLISHED">Draft</option>
                    <option value="PUBLISHED">Dipublikasi</option>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </section>
</div>

<script>
  $("document").ready(function () {
    $("#body").summernote({
      height: 200,
      callbacks: {
        onDialogShown: function () {
          $("input[name=files]").prop("multiple", false);
        },

        onImageUpload: async function (files) {
          const formData = new FormData();
          formData.append("file", files[0]);

          const res = await fetch("/api/session-only/upload/image", {
            method: "post",
            body: formData,
          });

          const json = await res.json();

          $("#body").summernote(
            "insertImage",
            json.data.url,
            json.data.filename
          );
        },
      },
    });
  });
</script>
