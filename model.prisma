generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  password  String
  role      UserRole
  fullname  String
  email     String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Category  Category[]
  Post      Post[]
  Tag       Tag[]
}

model Post {
  id          Int        @id @default(autoincrement())
  title       String     @unique
  body        String
  thumbnail   String
  slug        String     @unique
  status      PostStatus
  totalView   Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userId      Int
  categoryId  Int
  category    Category   @relation(fields: [categoryId], references: [id])
  user        User       @relation(fields: [userId], references: [id])
  usedTag     usedTag[]
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  Post      Post[]
}

model Tag {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  usedTag   usedTag[]
}

model usedTag {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  postId    Int
  tagId     Int
  post      Post     @relation(fields: [postId], references: [id])
  tag       Tag      @relation(fields: [tagId], references: [id])
}

enum UserRole {
  ADMIN
  USER
}

enum PostStatus {
  PUBLISHED
  UNPUBLISHED
}
